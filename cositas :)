<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Formulario dinámico</title>
</head>
<body>

<script>
document.addEventListener("DOMContentLoaded", function () {

    // Crear el formulario
    const form = document.createElement("form");

    // Función para crear un campo con label
    function crearCampo(tipo, id, textoLabel) {
        const div = document.createElement("div");

        const label = document.createElement("label");
        label.setAttribute("for", id);
        label.textContent = textoLabel;

        const input = document.createElement("input");
        input.type = tipo;
        input.id = id;
        input.name = id;

        div.appendChild(label);
        div.appendChild(document.createElement("br"));
        div.appendChild(input);

        return div;
    }

    // Crear los campos
    form.appendChild(crearCampo("text", "nombre", "Nombre:"));
    form.appendChild(crearCampo("text", "apellidos", "Apellidos:"));
    form.appendChild(crearCampo("date", "fechaNacimiento", "Fecha de nacimiento:"));
    form.appendChild(crearCampo("email", "email", "Email:"));

    // Botón de envío
    const boton = document.createElement("button");
    boton.type = "submit";
    boton.textContent = "Enviar";

    form.appendChild(document.createElement("br"));
    form.appendChild(boton);

    // Añadir el formulario al body
    document.body.appendChild(form);
});
</script>

</body>
</html>
